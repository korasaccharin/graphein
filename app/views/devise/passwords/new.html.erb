<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'm-t' } do |f| %>
    <%= f.error_notification %>

    <div class="form-group"><%= f.input :email, required: true, input_html: { class: 'form-control' } %></div>

    <div class="form-actions">
        <%= f.button :submit, "Reset my password", class: 'btn btn-primary block full-width m-b' %>
    </div>
<% end %>
