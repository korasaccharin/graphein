<%= simple_form_for @visualization, html: { class: 'form-horizontal' } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <div class="form-group"><%= f.input :name, input_html: { class: 'form-control' } %></div>
    </div>

    <div class="form-actions"><%= f.button :submit, class: 'btn btn-default' %></div>
<% end %>
