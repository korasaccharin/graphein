<% content_for :title, 'Visualizations' %>
<% content_for :header do %><h1>Visualizations</h1><% end %>
<% content_for :toolbar do %><li><%= link_to 'New visualization', new_visualization_path %></li><% end %>

<div class="ibox float-e-margins">
    <div class="ibox-title"><h5>Visualizations</h5></div>
    <div class="ibox-content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @visualizations.each do |visualization| %>
                <tr>
                    <td><%= visualization.name %></td>
                    <td><%= link_to 'Show', visualization %></td>
                    <td><%= link_to 'Edit', edit_visualization_path(visualization) %></td>
                    <td><%= link_to 'Destroy', visualization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
