<% unless notice.nil? %>
  <script>
    $(document).ready(function() {
      setTimeout(function() {
        toastr.options = {
          closeButton: true,
          progressBar: true,
          showMethod: 'slideDown',
          positionClass: 'toast-bottom-right',
          timeOut: 4000
        };
        toastr.success('<%= notice %>');
      }, 500);
    });
  </script>
<% end %>
